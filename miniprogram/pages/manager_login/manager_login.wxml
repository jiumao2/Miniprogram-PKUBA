<!--miniprogram/pages/manager_login/manager_login.wxml-->

<view class="weui-form">
	<view class="weui-form__text-area">
		<h2 class="weui-form__title">身份验证</h2>
		<view class="weui-form__desc">请输入登录密码</view>
	</view>
	<view class="weui-form__control-area">
		<view class="weui-cells__group weui-cells__group_form">
			<view class="weui-cells weui-cells_form">
				<view class="weui-cell weui-cell_active">
					<view class="weui-cell__hd">
						<label class="weui-label">密码</label>
					</view>
					<view class="weui-cell__bd">
						<input class="weui-input" placeholder="请输入密码" type="text" placeholder-class="weui-input__placeholder"
							bindinput="passwordInput" />
					</view>
				</view>
			</view>
		</view>
	</view>
	<view class="weui-form__opr-area">
		<a class="weui-btn weui-btn_primary" bindtap="confirmation">确定</a>
	</view>
</view>

<view class="fadeIn {{hideLoading ? 'fadeOut' : ''}}" wx:if="{{loading}}">
	<view class="weui-mask_transparent"></view>
	<view class="weui-toast">
		<view class="weui-primary-loading weui-primary-loading_transparent">
			<view class="weui-primary-loading__dot"></view>
		</view>
		<view class="weui-toast__content">加载中</view>
	</view>
</view>